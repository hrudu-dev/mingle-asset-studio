{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noEmit": true,
        "strict": false,
        "resolveJsonModule": true
    },
    "include": ["**/*.js", "**/*.json"],
    "exclude": ["node_modules", "dist"]
}
